<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<properties>     
		<!-- 基本的文件的输出信息的配置 -->
		<property name="LOG_HOME">logs</property>
		<property name="BACKUP_HOME">{LOG_HOME}/backup</property>
		<property name="LOG">log</property> 	
	</properties>
	
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n" />
		</Console>
		<File name="log" fileName="${LOG_HOME}/${LOG}.log" append="false">
			<PatternLayout
				pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %class{36} %L %M - %msg%xEx%n" />
		</File>
		<File name="appcatalog" fileName="${LOG_HOME}/AppCatalog.log" append="false">
			<PatternLayout
				pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %class{36} %L %M - %msg%xEx%n" />
		</File>
	</Appenders>
	
	<Loggers>
		<Logger name="org" level="warn" />
		<Logger name="io" level="warn" />
		<Logger name="com.mchange" level="warn" />
		
		<Root level="debug" includeLocation="false">
			<AppenderRef ref="Console" />
			<!--AppenderRef ref="log" /-->
		</Root>
	</Loggers>
</Configuration>